# Root Environment Variables (Shared)

# JWT Secret (shared across services)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=3600

# Database URLs 
POSTGRES_AUTH_URL=postgresql://postgres:postgres@localhost:5432/auth_db
POSTGRES_USER_URL=postgresql://postgres:postgres@localhost:5433/user_db
POSTGRES_POST_URL=postgresql://postgres:postgres@localhost:5434/post_db
POSTGRES_MESSAGE_URL=postgresql://postgres:postgres@localhost:5435/message_db
POSTGRES_EMAIL_URL=postgresql://postgres:postgres@localhost:5436/email_db
POSTGRES_ANALYTICS_URL=postgresql://postgres:postgres@localhost:5437/analytics_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@localhost:5672

# MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=media

# Service Ports
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
POST_SERVICE_PORT=3003
MESSAGE_SERVICE_PORT=3004
EMAIL_SERVICE_PORT=3005
ANALYTICS_SERVICE_PORT=8000

# gRPC Ports
AUTH_GRPC_PORT=5001
USER_GRPC_PORT=5002
POST_GRPC_PORT=5003
MESSAGE_GRPC_PORT=5004
ANALYTICS_GRPC_PORT=5007
